<script type="text/javascript">
    $("#menu2").hover(
            function () {
                $("#sousmenuMetier").show();
            },
            function () {
                $("#sousmenuMetier").hide();
            }
    );

    $("#sousmenuMetier").hover(
            function () {
                $(this).show();
            },
            function () {
                $(this).hide();
            }
    );


    //DEFILEMENT DES ARTICLES
    $(document).ready(function() {

        var activeArticle = 1;
        var articleHeight = 644;
        var moveHeight;
        var nbMaxArticle = $('.article').length;

        switchStateArticle(activeArticle);


        $(".btnSwitchArticle").click(function() {

            if($(this).attr("id") == "btnSwitchBottom"){

                if(activeArticle==nbMaxArticle-2){
                    moveHeight = 0;
                }
                else{
                    moveHeight = articleHeight;
                    activeArticle += 1 ;
                }
            }
            else{
                if(activeArticle==1)
                    moveHeight = 0;
                else {
                    activeArticle -= 1 ;
                    moveHeight = articleHeight*(-1);

                }
            }

            $( ".article" ).each(function( index ) {
                $(this).css('opacity',0.05);

                $(this).animate({bottom:"+="+moveHeight},300);
            });

            switchStateArticle(activeArticle);
        });

    });

    function switchStateArticle(id)
    {
        $("#art"+id).animate({opacity: 0.86},500);
    }







</script>
